<p id="notice"><%= notice %></p>

<h1>Listing Forums</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Happened at</th>
      <th>Professor</th>
      <th>Occurence</th>
      <th>Author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @forums.each do |forum| %>
      <tr>
        <td><%= forum.title %></td>
        <td><%= forum.body %></td>
        <td><%= forum.happened_at %></td>
        <td><%= forum.professor %></td>
        <td><%= forum.occurence %></td>
        <td><%= forum.author %></td>
        <td><%= link_to 'Show', forum %></td>
        <td><%= link_to 'Edit', edit_forum_path(forum) %></td>
        <td><%= link_to 'Destroy', forum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

